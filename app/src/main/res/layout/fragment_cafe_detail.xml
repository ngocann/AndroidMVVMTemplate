<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data >
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.kipalog.mobile.viewmodel.CafeDetailViewModel"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.home.HomeActivity"
        android:visibility="@{viewModel.isLoading ? View.GONE : View.VISIBLE}"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:fitsSystemWindows="true"
            >

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:fitsSystemWindows="true"
                app:expandedTitleMarginStart="48dp"
                app:expandedTitleMarginEnd="64dp"
                app:layout_collapseMode="parallax"
                >

                <android.support.constraint.ConstraintLayout
                    android:layout_marginTop="?android:attr/actionBarSize"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
                        android:id="@+id/vpImages"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />


                </android.support.constraint.ConstraintLayout>


                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="?android:attr/actionBarSize"
                    app:layout_scrollFlags="exitUntilCollapsed"
                    app:layout_collapseMode="pin"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="16dp"
                    android:src="@drawable/ic_arrow"
                    />

                <ImageView
                    android:id="@+id/ivShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="?android:attr/actionBarSize"
                    app:layout_scrollFlags="exitUntilCollapsed"
                    app:layout_collapseMode="pin"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="16dp"
                    android:src="@drawable/ic_share"
                    />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@{viewModel.categoryColorCafeBinding}"
                    tools:background="@{viewModel.categoryColorCafeBinding}"
                    android:gravity="center"
                    app:layout_collapseMode="pin"
                    >
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@{viewModel.cafeBinding.name}"
                            android:textColor="@{viewModel.categoryTextColorCafeBinding}"
                            android:textStyle="bold"
                            android:gravity="center"
                            />
                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                >
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{viewModel.cafeBinding.title}"
                    android:textColor="@android:color/black"
                    tools:text="Title"
                    />
                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.cafeBinding.desc}"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                    tools:text="Desc"
                    />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvDesc"
                    android:background="@android:color/darker_gray"
                    />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="8dp"
                    android:padding="8dp"
                    android:background="@{viewModel.categoryColorCafeBinding}"
                    android:textColor="@{viewModel.categoryTextColorCafeBinding}"

                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/divider"
                    android:text="@{viewModel.cafeBinding.address}"
                    tools:text="6 Thi Sach, Distric 1"
                    tools:background="@color/byt"
                    />

                <ImageView
                    android:id="@+id/ivTime"
                    android:src="@drawable/ic_clock"
                    app:layout_constraintTop_toBottomOf="@+id/tvAddress"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/ivPhone"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    style="@style/AppTheme.CafeDetailIcon"
                    />

                <ImageView
                    android:id="@+id/ivPhone"
                    android:src="@drawable/ic_phone"
                    app:layout_constraintTop_toTopOf="@id/ivTime"
                    app:layout_constraintLeft_toRightOf="@+id/ivTime"
                    app:layout_constraintRight_toLeftOf="@+id/ivFacebook"
                    android:onClick="@{() -> viewModel.onPhoneClicked()}"
                    style="@style/AppTheme.CafeDetailIcon"
                    />
                <ImageView
                    android:id="@+id/ivFacebook"
                    android:src="@drawable/ic_facebook"
                    app:layout_constraintTop_toTopOf="@id/ivTime"
                    app:layout_constraintLeft_toRightOf="@+id/ivPhone"
                    app:layout_constraintRight_toLeftOf="@+id/ivInstagram"
                    android:onClick="@{() -> viewModel.onFacebookClicked()}"
                    style="@style/AppTheme.CafeDetailIcon"
                    />
                <ImageView
                    android:id="@+id/ivInstagram"
                    android:src="@drawable/ic_instagram"
                    app:layout_constraintTop_toTopOf="@id/ivTime"
                    app:layout_constraintLeft_toRightOf="@+id/ivFacebook"
                    app:layout_constraintRight_toLeftOf="@+id/ivGrab"
                    android:onClick="@{() -> viewModel.onInstagramClicked()}"
                    style="@style/AppTheme.CafeDetailIcon"
                    />
                <ImageView
                    android:id="@+id/ivGrab"
                    android:src="@drawable/ic_grab"
                    app:layout_constraintTop_toTopOf="@id/ivTime"
                    app:layout_constraintLeft_toRightOf="@+id/ivInstagram"
                    app:layout_constraintRight_toLeftOf="@+id/ivGoViet"
                    style="@style/AppTheme.CafeDetailIcon"
                    />
                <ImageView
                    android:id="@+id/ivGoViet"
                    android:src="@drawable/ic_goviet"
                    app:layout_constraintTop_toTopOf="@id/ivTime"
                    app:layout_constraintLeft_toRightOf="@+id/ivGrab"
                    app:layout_constraintRight_toRightOf="parent"
                    style="@style/AppTheme.CafeDetailIcon"
                    />

                <fragment
                    android:id="@+id/mapView"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/ivTime"
                    >

                </fragment>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/mapView"
                    android:text="@{viewModel.cafeBinding.hours}"
                    />

            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            />
    </android.support.design.widget.CoordinatorLayout>
</layout>
