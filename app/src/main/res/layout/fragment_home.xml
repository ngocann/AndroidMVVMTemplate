<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/medium"
        android:text="@string/packedguides"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="40sp"
        android:padding="8dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tvCategoryEf"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintRight_toLeftOf="@+id/tvCategoryByt"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginTop="@dimen/medium"
        android:layout_marginLeft="@dimen/medium"
        android:layout_marginRight="@dimen/medium"
        android:background="@color/ef"
        />

    <TextView
        android:id="@+id/tvCategoryByt"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@id/tvCategoryEf"
        app:layout_constraintLeft_toRightOf="@+id/tvCategoryEf"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/medium"
        android:layout_marginLeft="@dimen/medium"
        android:background="@color/byt"
        />

    <TextView
        android:id="@+id/tvCategorySd"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCategoryEf"
        app:layout_constraintRight_toLeftOf="@+id/tvCategoryVc"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginTop="@dimen/medium"
        android:layout_marginRight="@dimen/medium"
        android:layout_marginLeft="@dimen/medium"
        android:background="@color/sd"
        />

    <TextView
        android:id="@+id/tvCategoryVc"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@id/tvCategorySd"
        app:layout_constraintLeft_toRightOf="@+id/tvCategorySd"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/medium"
        android:layout_marginLeft="@dimen/medium"
        android:background="@color/vc"
        />

</android.support.constraint.ConstraintLayout>